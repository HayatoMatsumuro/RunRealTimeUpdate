<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/id_passlist_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:text="@string/str_title_passlist"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/id_passlist_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_passlist_txt_title"
        android:layout_below="@+id/id_passlist_txt_title"
        android:layout_marginTop="20dp"
        android:text="@string/str_txt_racename" />
    
    <ListView
        android:id="@+id/id_passlist_listview_sectionlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_passlist_txt_name"
        android:layout_below="@+id/id_passlist_txt_name"
        android:layout_marginTop="20dp" >
    </ListView>

    <Button
        android:id="@+id/id_passlist_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/str_btn_back" />

</RelativeLayout>
