<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/id_updatelist_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/str_title_updatelist"
        android:textAppearance="?android:attr/textAppearanceMedium" />

     <ListView
         android:id="@+id/id_updatelist_listview_runner"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/id_updatelist_txt_title"
         android:layout_below="@+id/id_updatelist_txt_title"
         android:layout_marginTop="10dp" >

    </ListView>

</RelativeLayout>
