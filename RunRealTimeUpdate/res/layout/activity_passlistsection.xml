<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_activity_passlistsection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/id_activity_passlistsection_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/str_title_passlistsection"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/id_activity_passlistsection_sectionlist_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_activity_passlistsection_title_textview"
        android:layout_below="@+id/id_activity_passlistsection_title_textview"
        android:layout_marginTop="10dp" >
    </ListView>

    <Button
        android:id="@+id/id_activity_passlistsection_back_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/str_btn_back" />

</RelativeLayout>
