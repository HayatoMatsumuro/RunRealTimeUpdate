<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/id_runnerlist_txt_runnerlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/str_title_runnerlist"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/id_runnerlist_txt_runnerentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/str_btn_runnerentry" />
    
    <ListView
        android:id="@+id/id_racedetail_listview_runner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_runnerlist_txt_runnerlist"
        android:layout_below="@+id/id_runnerlist_txt_runnerlist"
        android:layout_marginTop="30dp" >
    </ListView>

</RelativeLayout>
