<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_list_item_raceinfo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_com_list_item_layout_padding" >

    <!-- 大会情報詳細 -->
    <RelativeLayout
        android:id="@+id/id_list_item_raceinfo_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_list_item_raceinfo_detail_layout_height">

        <!-- ドット -->
        <TextView
            android:id="@+id/id_list_item_raceinfo_detail_dot_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dim_com_list_item_dot_textview_padding"
            android:text="@string/str_txt_dot"
            android:textColor="@color/color_com_list_item_dot_textview_text" />

        <!-- 大会名 -->
        <TextView
            android:id="@+id/id_list_item_raceinfo_detail_racename_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_list_item_raceinfo_detail_dot_textview"
            android:text="@string/str_txt_racename" />

    </RelativeLayout>
	
	<!-- 速報中 -->
    <RelativeLayout
        android:id="@+id/id_list_item_raceinfo_update_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_list_item_raceinfo_update_layout_height"
        android:padding="@dimen/dim_list_item_raceinfo_detail_layout_padding" >

        <!-- 速報中 -->
		<TextView
		    android:id="@+id/id_list_item_raceinfo_update_textview"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/color_item_list_raceinfo_update_textview_back"
		    android:gravity="center"
		    android:padding="@dimen/dim_list_item_raceinfo_update_textview_padding"
		    android:text="@string/str_txt_updateexe"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/color_item_list_raceinfo_update_textview_text" />

	</RelativeLayout>
</LinearLayout>
