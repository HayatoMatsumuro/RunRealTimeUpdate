<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 

    <TextView
        android:id="@+id/id_raceentry_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/str_title_raceentry"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/id_raceentry_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/str_btn_back" />
    
    <TextView
        android:id="@+id/id_raceentry_txt_inputurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_raceentry_txt_title"
        android:layout_below="@+id/id_raceentry_txt_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/str_msg_inputurl" />

    <EditText
        android:id="@+id/id_raceentry_edit_inputurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_raceentry_txt_inputurl"
        android:layout_below="@+id/id_raceentry_txt_inputurl"
        android:layout_marginTop="10dp"
        android:ems="20"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/id_raceentry_btn_decide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_raceentry_edit_inputurl"
        android:layout_below="@+id/id_raceentry_edit_inputurl"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/str_btn_decide" />

</RelativeLayout>
